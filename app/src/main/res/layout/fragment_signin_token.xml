<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_signin_token_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/fragment_signin_token_text_hint" />

    <Button
        android:id="@+id/fragment_signin_token_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_signin_token_text"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/fragment_signin_token_accept_button_caption"/>

</androidx.constraintlayout.widget.ConstraintLayout>