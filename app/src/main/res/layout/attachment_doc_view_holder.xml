<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_gap">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/attachment_doc_view_holder_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/attachment_doc_view_holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/attachment_doc_view_holder_guideline"
        app:layout_constraintBottom_toBottomOf="@id/attachment_doc_view_holder_guideline"
        android:text=""/>

</androidx.constraintlayout.widget.ConstraintLayout>