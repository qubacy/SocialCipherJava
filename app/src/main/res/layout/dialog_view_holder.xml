<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_view_holder_height"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/dialog_view_holder_peer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_view_holder_last_message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_view_holder_peer_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:lines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>