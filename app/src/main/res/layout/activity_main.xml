<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_activity_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:id="@+id/main_activity_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/main_activity_header_quote"
        android:gravity="center"
        android:textSize="22dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/logo_caption"/>

    <TextView
        android:id="@+id/main_activity_header_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/main_activity_middle_guideline"
        android:layout_marginBottom="@dimen/default_gap"
        android:gravity="center"
        android:textSize="16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/header_quote_caption"/>

    <Button
        android:id="@+id/main_activity_sign_in_vk_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_activity_middle_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/default_gap"
        android:text="@string/sign_in_vk_button_caption"/>

</androidx.constraintlayout.widget.ConstraintLayout>